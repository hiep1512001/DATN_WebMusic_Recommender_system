
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Web music</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="~/boostrap/css/bootstrap.css" rel="stylesheet" />
    <link href="~/access/css/style.css" rel="stylesheet" />
    <link rel="icon" href="https://th.bing.com/th/id/OIP._vB63WgVAFeTG-0L1NeriAHaHa?pid=ImgDet&rs=1" type="image/x-icon" />
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.4/css/all.css" integrity="sha384-DyZ88mC6Up2uqS4h/KRgHuoeGwBcD4Ng9SiP4dIRy0EXTlnuz47vAwmeGwVChigm" crossorigin="anonymous" />
    <script src="https://kit.fontawesome.com/9b2b3eabfc.js" crossorigin="anonymous"></script>
</head>
<body>
    <div class="container-fluid">
        <div class="row" style="max-width: 100%;">
            <div class="col-md-2 bg-dark menu-bar list-music-item" style="max-height: 100%;">
                <div class="container">
                    <div class="row">
                        <h2 style="color: white;"><i class="fa-sharp fa-solid fa-hippo"></i> Music</h2>
                    </div>
                </div>
                <hr style="color: white;">
                <div class="container-fluid">
                    <nav class="navbar navbar-expand-lg bg-dark">
                        <div class="collapse navbar-collapse" id="Menu_admin">
                            <ul class="nav flex-column">
                                <li class="nav-item">
                                    <a class="nav navbar-brand mt-3" style="color: white;" aria-current="page" href="~/Song/Index">
                                        <h5>
                                            <i class="fa-sharp fa-solid fa-music">
                                            </i> Quản lý nhạc
                                        </h5>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav navbar-brand mt-3" style="color: white;" aria-current="page" href="/Singer/Index">
                                        <h5>
                                            <i class="fa-solid fa-user-tie"></i> Quản lý ca sĩ
                                        </h5>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav navbar-brand mt-3" style="color: white;" aria-current="page" href="/Composer/Index">
                                        <h5>
                                            <i class="fa-solid fa-user-large"></i> Quản lí nhạc sĩ
                                        </h5>
                                    </a>
                                </li>
                                <li class="nav-item" style="background-color: #95a5a6;">
                                    <a class="nav navbar-brand mt-3" style="color: white;" aria-current="page" href="/Genre/Index">
                                        <h5>
                                            <i class="fa-sharp fa-solid fa-music">
                                            </i> Quản lí thể loại
                                        </h5>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav navbar-brand mt-3" style="color: white;" aria-current="page" href="/Album/Index">
                                        <h5>
                                            <i class="fa-solid fa-indent"></i> Quản lí album
                                        </h5>
                                    </a>
                                </li>
                                <li class="nav-item ">
                                    <a class="nav navbar-brand mt-3" style="color: white;" aria-current="page"href="#" onclick="logout()">
                                        <h5>
                                            <i class="fa-sharp fa-solid fa-right-from-bracket">
                                            </i> Đăng xuất
                                        </h5>
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </nav>

                </div>
            </div>
            <!-- Content -->
            <div class="col-md-10 content">
                <div class="container">
                    <div class="row mt-2">
                        <div class="col-md-11">

                        </div>
                        <div class="col-md-1">
                            <button class="btn btn-info">Admin</button>
                        </div>
                    </div>
                </div>
                <hr>
                <!-- Danh sách bài hát -->
                <div class="container">
                    <button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#myModal" onclick="clearTextBox();">Thêm thể loại</button><br /><br />
                    <table class="table table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>
                                    ID
                                </th>
                                <th>
                                    Tên thể loại
                                </th>
                                <th>
                                    Thao tác
                                </th>
                            </tr>
                        </thead>
                        <tbody id="tbody">

                        </tbody>
                    </table>
                </div>
                <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <button type="button" class="close" data-bs-dismiss="modal">×</button>
                                <h4 class="modal-title" id="myModalLabeladd">Thêm thể loại</h4>
                                <h4 class="modal-title" style="display:none;" id="myModalLabelupdate">Sửa thể loại</h4>
                            </div>
                            <div class="modal-body">
                                <form>
                                    <div class="form-group">
                                        <label for="ID">ID</label>
                                        <input type="text" class="form-control" id="ID" placeholder="Id" disabled="disabled" />
                                    </div>
                                    <div class="form-group">
                                        <label for="Name">Tên thẻ loại</label>
                                        <input type="text" class="form-control" id="Name" placeholder="Tên thể loại" />
                                    </div>
                                </form>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-primary" id="btnAdd" onclick="return Add();">Add</button>
                                <button type="button" class="btn btn-primary" id="btnUpdate" style="display:none;" onclick="Update();">Update</button>
                                <button type="button" class="btn btn-default" data-bs-dismiss="modal">Close</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="~/Scripts/jquery-3.6.4.min.js"></script>
    <script src="~/access/js/popper.min.js"></script>
    <script src="~/boostrap/js/bootstrap.min.js"></script>
    <script src="~/access/js/genre.js"></script>
</body>
</html>

