@model List<Web_music_DATN.Models.CustomSong>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="UTF-8">
    <title>Web music</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="~/boostrap/css/bootstrap.css" rel="stylesheet" />
    <link href="~/access/css/style.css" rel="stylesheet" />
    <link href="~/access/css/stylePlayer.css" rel="stylesheet" />
    <link rel="icon" href="https://th.bing.com/th/id/OIP._vB63WgVAFeTG-0L1NeriAHaHa?pid=ImgDet&rs=1" type="image/x-icon" />
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.4/css/all.css" integrity="sha384-DyZ88mC6Up2uqS4h/KRgHuoeGwBcD4Ng9SiP4dIRy0EXTlnuz47vAwmeGwVChigm" crossorigin="anonymous" />
    <script src="https://kit.fontawesome.com/9b2b3eabfc.js" crossorigin="anonymous"></script>
</head>
<body>
    <div class="container-fluid">
        <div class="row" style="max-width: 100%;">
            <div class="col-md-2 bg-dark menu-bar list-music-item" style="max-height: 100%;">
                <div class="container">
                    <div class="row">
                        <h2 style="color: white;">
                            <i class="fa-sharp fa-solid fa-hippo">
                            </i> Music
                        </h2>
                    </div>
                </div>
                <hr style="color: white;">
                <div class="container-fluid">
                    <nav class="navbar navbar-expand-lg bg-dark">
                        <div class="collapse navbar-collapse" id="Menu_user">
                            <ul class="nav flex-column">
                                <li class="nav-item">
                                    <a class="nav navbar-brand mt-3" style="color: white;" aria-current="page" href="~/Song/Index">
                                        <h5>
                                            <i class="fa-sharp fa-solid fa-music">
                                            </i> Quản lý nhạc
                                        </h5>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav navbar-brand mt-3" style="color: white;" aria-current="page" href="/Singer/Index">
                                        <h5>
                                            <i class="fa-solid fa-user-tie"></i> Quản lý ca sĩ
                                        </h5>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav navbar-brand mt-3" style="color: white;" aria-current="page" href="/Composer/Index">
                                        <h5>
                                            <i class="fa-solid fa-user-large"></i> Quản lí nhạc sĩ
                                        </h5>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav navbar-brand mt-3" style="color: white;" aria-current="page" href="/Genre/Index">
                                        <h5>
                                            <i class="fa-sharp fa-solid fa-music">
                                            </i> Quản lí thể loại
                                        </h5>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav navbar-brand mt-3" style="color: white;" aria-current="page" href="/Album/Index">
                                        <h5>
                                            <i class="fa-solid fa-indent"></i> Quản lí album
                                        </h5>
                                    </a>
                                </li>
                                <li class="nav-item ">
                                    <a class="nav navbar-brand mt-3" style="color: white;" aria-current="page" href="#" onclick="logout()">
                                        <h5>
                                            <i class="fa-sharp fa-solid fa-right-from-bracket">
                                            </i> Đăng xuất
                                        </h5>
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </nav>
                </div>
            </div>
            <!-- Content -->
            <div class="col-md-10 content">
                <div class="container-fluid">
                    <div class="row mt-2">
                        <div class="col-md-11">
                            <div class="search-music" role="search" style="margin-right: 10px;">
                                <input class="me-2 search-input" type="search" placeholder="Nhập tên bài hát cần tìm" aria-label="Search" id="search">
                                <a class="btn btn-outline-success search-btn">
                                    <i class="fa-solid fa-magnifying-glass"></i>
                                </a>
                            </div>
                        </div>
                        <div class="col-md-1">
                            <button class="btn btn-info">Admin</button>
                        </div>
                    </div>
                </div>
                <hr>
                <!-- Danh sách bài hát -->
                <div class="container">
                    <table class="table table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>
                                    ID
                                </th>
                                <th>
                                    Tên bài hát
                                </th>
                                <th>
                                    Tên ca sĩ
                                </th>
                                <th>
                                    Tên tác giả
                                </th>
                                <th>
                                    Tên thể loại
                                </th>
                                <th>
                                    Tên Album
                                </th>
                                <th>
                                    Ảnh
                                </th>
                            </tr>
                        </thead>
                        <tbody id="tbody">
                            @foreach (var item in Model)
                            {
                            <tr>
                                <td>
                                    @item.id
                                </td>
                                <td>
                                    @item.name
                                </td>
                                <td>
                                    @item.tencasi
                                </td>
                                <td>
                                    @item.tentacgia
                                </td>
                                <td>
                                    @item.tentheloai
                                </td>
                                <td>
                                    @item.tenalbum
                                </td>
                                <td>
                                    <img src="/@item.image " class="img-small" />
                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <script src="~/Scripts/jquery-3.6.4.min.js"></script>
    <script src="~/access/js/popper.min.js"></script>
    <script src="~/boostrap/js/bootstrap.min.js"></script>
    <script src="~/access/js/dselect.js"></script>
    <script>
        function logout() {
            var ans1 = confirm("Bạn có chắc muốn đăng xuất?");
            if (ans1) {
                window.location = "/Logout/Index"
            }
        }
    </script>
</body>
</html>
