
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sign up - Music</title>
    <link href="~/access/css/login.css" rel="stylesheet" />

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500&family=Roboto:wght@300;400;500;700&display=swap"
          rel="stylesheet">
</head>

<body>
    <div class="signup">
        <div class="logo">
            <p>
                <i class="fa-solid fa-music"></i>
                Music
            </p>
        </div>

        <!-- sign up with -->
        <div class="container">
            <div class="container__login-with">
                <label id="rnotify" style="color:red" hidden>Tên tài khoản đã tồn tại</label>
            </div>
@*
            <a class="btn btn--fb btn--fb--signup" onclick="RegisterFacebook()">
                <i class="icon fa-brands fa-square-facebook"></i>
               Đăng ký bằng facebook
            </a>*@
            <!-- create account -->
            <div class="form">
                <div>
                    <!-- form sign up -->

                    <div class="user-password">
                        <p class="form__profile-name">Tạo tên tài khoảng</p>
                        <label class="form__user" id="rnotifyusername" style="color:red" hidden>Nhập tên tài khoảng</label>
                        <input type="text" placeholder="Nhập tên tài khoảng" class="form__input-profile-name" id="rusername">
                    </div>
                    <div class="user-password">
                        <p class="form__password">Tạo mật khẩu</p>
                        <label class="form__password" id="rnotifypassword1" style="color:red;" hidden>Nhập mật khẩu</label>
                        <label class="form__password" id="rnotifypassword2" style="color:red;" hidden>Độ dài mật khẩu từ 6 ký tự trở đi</label>
                        <input type="password" placeholder="Nhập mật khẩu" class="form__input-password" id="rpassword">
                    </div>
                    <div class="user-password">
                        <p class="form__password">Nhập lại mật khẩu</p>
                        <label class="form__password" id="rnotifypassword3" style="color:red;" hidden>Mật khẩu không trùng</label>
                        <input type="password" placeholder="Nhập lại mật khẩu" class="form__input-password" id="rpassword2">
                    </div>
                    <div class="user-password">
                        <label class="form__password">Bạn vui lòng chọn thể loại nhạc yêu thích để hệ thống gợi ý </label>
                        <select class="form-select form__password" aria-label="Default select example" id="select-theloai">
                            <option selected class="form__password">Chọn thể loại</option>
                        </select>
                    </div>
                    <div class="signup-btn">

                        <button class="btn btn--signup" onclick="Register()">Đăng ký</button>
                    </div>
                </div>

                <p class="login">
                    Bạn đã có tài khoảng?
                    <a href="/Login/Index">Đăng nhập</a>.
                </p>
            </div>
        </div>
    </div>
    <script src="~/Scripts/jquery-3.6.4.min.js"></script>
    <script src="~/access/js/popper.min.js"></script>
    <script src="~/boostrap/js/bootstrap.min.js"></script>
    <script src="~/access/js/dselect.js"></script>
    <script src="~/access/js/login.js"></script>
</body>

</html>

