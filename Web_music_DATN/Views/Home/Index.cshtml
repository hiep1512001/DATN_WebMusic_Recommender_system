
@{
    Layout = null;
}
@{
    ViewBag.Title = "Index";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>
        Web music
    </title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="~/boostrap/css/bootstrap.css" rel="stylesheet" />
    <link href="~/access/css/style.css" rel="stylesheet" />
    <link rel="icon" href="https://th.bing.com/th/id/OIP._vB63WgVAFeTG-0L1NeriAHaHa?pid=ImgDet&rs=1" type="image/x-icon" />
    <link href="~/access/css/stylePlayer.css" rel="stylesheet" />
    <script src="https://kit.fontawesome.com/9b2b3eabfc.js" crossorigin="anonymous">
    </script>
    @*    trinh phat nhac*@

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600&display=swap" rel="stylesheet" />
    <script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js">
    </script>
    <script nomodule
            src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js">
    </script>
    <link href="~/access/css/stylePlayer.css" rel="stylesheet" />
</head>
<body>
    <div class="container-fluid">
        <div class="row" style="max-width: 100%;">
            <div class="col-md-2 bg-dark menu-bar list-music-item" style="max-height: 100%;">
                <div class="container">
                    <div class="row">
                        <h2 style="color: white;">
                            <i class="fa-sharp fa-solid fa-hippo">
                            </i> Music
                        </h2>
                    </div>
                </div>
                <hr style="color: white;">
                <div class="container-fluid">
                    <nav class="navbar navbar-expand-lg bg-dark">
                        <div class="collapse navbar-collapse" id="Menu_user">
                            <ul class="nav flex-column">
                                <li class="nav-item">
                                    <a class="nav navbar-brand mt-1" style="color: white;" aria-current="page" href="#" onclick="openModal()">
                                        <h5>
                                            <i class="fa-solid fa-house">
                                            </i> Trang chủ
                                        </h5>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav navbar-brand mt-3" style="color: white;" aria-current="page" href="#" onclick="openModal()">
                                        <h5>
                                            <i class="fa-solid fa-magnifying-glass">
                                            </i> Tìm kiếm
                                        </h5>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav navbar-brand mt-3" style="color: white;" aria-current="page" href="#" onclick="openModal()">
                                        <h5>
                                            <i class="fa-sharp fa-solid fa-music">
                                            </i> Danh sách phát
                                        </h5>
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </nav>
                </div>
            </div>
            <!-- Content -->
            <div class="col-md-10 content">
                <div class="row mt-2 ">
                    <div class="col-9">

                    </div>

                    <div class="col-3">
                        <div class="row">
                            <a class="col btn btn-success mt-1 ms-1 me-1" href="/Login/Index"> Đăng nhập</a>
                            <a class="col btn btn-outline-info mt-1 ms-1 me-1" href="/Login/Register"> Đăng ký</a>
                        </div>
                    </div>
                </div>
                <hr>

                <div class="row mb-3" id="song_trend">

                </div>
                <div class="row mb-3" id="singer_trend">

                </div>
                <div class="row mb-3" id="album_trend">

                </div>
            </div>
            <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-bs-dismiss="modal">×</button>
                            <h4 class="modal-title" id="myModalLabeladd">Thông báo</h4>
                        </div>
                        <div class="modal-body">
                            <h5>
                                Bạn cần đăng nhập để sử dụng
                            </h5>
                            
                        </div>
                        <div class="modal-footer">
                            <a class="col btn btn-success mt-1 ms-1 me-1" href="/Login/Index" >Đăng nhập</a>
                            <a class="col btn btn-outline-info mt-1 ms-1 me-1"  href="/Login/Register">Đăng ký</a>
                            <button type="button" class="btn btn-default" data-bs-dismiss="modal">Close</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="~/access/js/jquery.js">
    </script>
    <script src="~/access/js/popper.min.js">
    </script>
    <script src="~/boostrap/js/bootstrap.js">
    </script>
    <script src="~/access/js/home.js"></script>
</body>
</html>
