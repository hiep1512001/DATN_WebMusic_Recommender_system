@model Web_music_DATN.Models.CustomSong
@{
    Layout = null;
}
@{
    ViewBag.Title = "Index";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>
        Web music
    </title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="~/boostrap/css/bootstrap.css" rel="stylesheet" />
    <link href="~/access/css/style.css" rel="stylesheet" />
    <link rel="icon" href="https://th.bing.com/th/id/OIP._vB63WgVAFeTG-0L1NeriAHaHa?pid=ImgDet&rs=1" type="image/x-icon" />
    <link href="~/access/css/stylePlayer.css" rel="stylesheet" />
    <script src="https://kit.fontawesome.com/9b2b3eabfc.js" crossorigin="anonymous">
    </script>
    @*    trinh phat nhac*@

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600&display=swap" rel="stylesheet" />
    <script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js">
    </script>
    <script nomodule
            src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js">
    </script>
    <link href="~/access/css/stylePlayer.css" rel="stylesheet" />
</head>
<body>
    <div class="container-fluid">
        <div class="row" style="max-width: 100%;">
            <div class="col-md-2 bg-dark menu-bar list-music-item" style="max-height: 100%;">
                <div class="container">
                    <div class="row">
                        <h2 style="color: white;">
                            <i class="fa-sharp fa-solid fa-hippo">
                            </i> Music
                        </h2>
                    </div>
                </div>
                <hr style="color: white;">
                <div class="container-fluid">
                    <nav class="navbar navbar-expand-lg bg-dark">
                        <div class="collapse navbar-collapse" id="Menu_user">
                            <ul class="nav flex-column">
                                <li class="nav-item">
                                    <a class="nav navbar-brand mt-1" style="color: white;" aria-current="page" href="/HomeUser/Index">
                                        <h5>
                                            <i class="fa-solid fa-house">
                                            </i> Trang chủ
                                        </h5>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav navbar-brand mt-3" style="color: white;" aria-current="page" href="/Search/Index">
                                        <h5>
                                            <i class="fa-solid fa-magnifying-glass">
                                            </i> Tìm kiếm
                                        </h5>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav navbar-brand mt-3" style="color: white;" aria-current="page" href="/Playlist/Index">
                                        <h5>
                                            <i class="fa-sharp fa-solid fa-music">
                                            </i> Nhạc yêu thích
                                        </h5>
                                    </a>
                                </li>
                                <li class="nav-item ">
                                    <a class="nav navbar-brand mt-3" style="color: white;" aria-current="page" href="#" onclick="logout()">
                                        <h5>
                                            <i class="fa-sharp fa-solid fa-right-from-bracket">
                                            </i> Đăng xuất
                                        </h5>
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </nav>
                </div>
            </div>
            <!-- Content -->
            <div class="col-md-10 content">
                <div class="music">
                    <div class="music-thumb">
                        <img src="~/@Model.image" alt="" />
                    </div>
                    <h3 class="music-name">
                        @Model.name - @Model.tencasi
                    </h3>
                    <input type="range" name="range" id="range" class="range" />
                    <audio src="~/@Model.song" id="song">
                    </audio>
                    <div class="timer">
                        <div class="remaining">
                            2:10
                        </div>
                        <div class="duration">
                            -3:10
                        </div>
                    </div>
                    <div class="controls">
                        <ion-icon name="infinite-outline" class="play-infinite">
                        </ion-icon>
                        <ion-icon name="play-back" class="play-back">
                        </ion-icon>
                        <div class="play">
                            <div class="player-inner">
                                <ion-icon name="play" class="play-icon">
                                </ion-icon>
                            </div>
                        </div>
                        <ion-icon name="play-forward" class="play-forward">
                        </ion-icon>
                        <ion-icon name="repeat-outline" class="play-repeat">
                        </ion-icon>
                    </div>
                </div>

                <div class="playlist">

                </div>
            </div>
        </div>
    </div>
    <script src="~/access/js/jquery.js">
    </script>
    <script src="~/access/js/popper.min.js">
    </script>
    <script src="~/boostrap/js/bootstrap.js">
    </script>
    <script src="~/access/js/songplaylist.js"></script>
</body>
</html>
